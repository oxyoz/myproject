<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InfoproActivity" >

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#D9D9D9" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EBEFF0"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/layout_height_10"
            android:text="我看过的城市"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_his_tip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_50"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/layout_height_10"
            android:text="暂无记录"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000"
            android:textSize="@dimen/b18_font" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#D9D9D9" />

        <TextView
            android:id="@+id/tv_hotcity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EBEFF0"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/layout_height_10"
            android:text="热门城市"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_sz"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_50"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/layout_height_10"
            android:text="深圳"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000"
            android:textSize="@dimen/b18_font" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#D9D9D9" />

        <TextView
            android:id="@+id/tv_gz"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_50"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/layout_height_10"
            android:text="广州"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000"
            android:textSize="@dimen/b18_font" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#D9D9D9" />

        <TextView
            android:id="@+id/tv_sh"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_50"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/layout_height_10"
            android:text="上海"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000"
            android:textSize="@dimen/b18_font" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#D9D9D9" />

        <TextView
            android:id="@+id/tv_bj"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_50"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/layout_height_10"
            android:text="北京"
            android:textColor="#000"
            android:textSize="@dimen/b18_font" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#D9D9D9" />
    </LinearLayout>

</LinearLayout>