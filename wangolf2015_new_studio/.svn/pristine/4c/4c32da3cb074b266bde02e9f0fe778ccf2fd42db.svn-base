<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Reg" >

    <include layout="@layout/layout_title_bar" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/all_bg_color"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/ed_eventname"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/layout_height_40"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/textView2"
                    android:background="@drawable/tv_all_round"
                    android:hint="请填写"
                    android:inputType="text"
                    android:paddingLeft="8dp"
                    android:textSize="@dimen/m_font" >

                    <requestFocus />
                </EditText>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="活动名称："
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/common_text" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relaytoshowDate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_50"
                android:clickable="true" >

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="开始时间："
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/common_text" />

                <TextView
                    android:id="@+id/tv_btime"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/layout_height_40"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/TextView03"
                    android:background="@drawable/tv_all_round"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:hint="请选择"
                    android:inputType="textPersonName"
                    android:paddingLeft="8dp"
                    android:textSize="@dimen/m_font" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relaytoshowDate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_50"
                android:clickable="true" >

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="结束时间："
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/common_text" />

                <TextView
                    android:id="@+id/tv_endtime"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/layout_height_40"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/TextView03"
                    android:background="@drawable/tv_all_round"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:hint="请选择"
                    android:inputType="textPersonName"
                    android:paddingLeft="8dp"
                    android:textSize="@dimen/m_font" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_50" >

                <TextView
                    android:id="@+id/TextView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="活动地点："
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/common_text" />

                <EditText
                    android:id="@+id/ed_address"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/layout_height_40"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/TextView04"
                    android:background="@drawable/tv_all_round"
                    android:hint="请填写活动地点"
                    android:inputType="text"
                    android:paddingLeft="8dp"
                    android:textSize="@dimen/m_font" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" >

                <EditText
                    android:id="@+id/ed_price"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/layout_height_40"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/TextView05"
                    android:background="@drawable/tv_all_round"
                    android:ems="13"
                    android:hint="请填写费用价格"
                    android:inputType="text"
                    android:paddingLeft="8dp"
                    android:textSize="@dimen/m_font" />

                <TextView
                    android:id="@+id/TextView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="活动费用："
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/common_text" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" >

                <EditText
                    android:id="@+id/ed_num"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/layout_height_40"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/TextView05"
                    android:background="@drawable/tv_all_round"
                    android:hint="请填写参加人数"
                    android:inputType="text"
                    android:paddingLeft="8dp"
                    android:textSize="@dimen/m_font" />

                <TextView
                    android:id="@+id/TextView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="活动人数："
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/common_text" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" >

                <EditText
                    android:id="@+id/ed_introduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/TextView05"
                    android:background="@drawable/tv_all_round"
                    android:gravity="top"
                    android:hint="不能少于10字"
                    android:inputType="textMultiLine"
                    android:minHeight="120dp"
                    android:padding="5dp"
                    android:paddingLeft="8dp"
                    android:textSize="@dimen/m_font" />

                <TextView
                    android:id="@+id/TextView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="活动简介："
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/common_text" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="8dp" >

                <TextView
                    android:id="@+id/TextView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="活动封面"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <ImageButton
                    android:id="@+id/myphoto"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/TextView05"
                    android:layout_margin="8dp"
                    android:background="@drawable/textlines_all"
                    android:clickable="true"
                    android:src="@drawable/zhaoxiangji" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>