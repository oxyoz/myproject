<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <include layout="@layout/layout_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/all_bg_color"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/money_1000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textlines_all"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/RelativeLayout1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height_50"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/price_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/layout_height_15"
                        android:text="￥1000"
                        android:textColor="@color/common_text" />
                </LinearLayout>

                <RadioButton
                    android:clickable="false"
                    android:id="@+id/radio_1000"
                    style="@style/RadioButtonStyles2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/money_2000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textlines_all"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/RelativeLayout2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height_50"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/price_2000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/layout_height_15"
                        android:text="￥2000"
                        android:textColor="@color/common_text" />
                </LinearLayout>

                <RadioButton
                    android:clickable="false"
                    android:id="@+id/radio_2000"
                    style="@style/RadioButtonStyles2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/money_5000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textlines_all"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/RelativeLayout3"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height_50"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/price_5000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/layout_height_15"
                        android:text="￥5000"
                        android:textColor="@color/common_text" />
                </LinearLayout>

                <RadioButton
                    android:clickable="false"
                    android:id="@+id/radio_5000"
                    style="@style/RadioButtonStyles2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/money_10000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textlines_all"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/RelativeLayout7"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height_50"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/price_10000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/layout_height_15"
                        android:text="￥10000"
                        android:textColor="@color/common_text" />
                </LinearLayout>

                <RadioButton
                    android:clickable="false"
                    android:id="@+id/radio_10000"
                    style="@style/RadioButtonStyles2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/money_20000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textlines_all"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/RelativeLayout5"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height_50"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/price_20000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/layout_height_15"
                        android:text="￥20000"
                        android:textColor="@color/common_text" />
                </LinearLayout>

                <RadioButton
                    android:clickable="false"
                    android:id="@+id/radio_20000"
                    style="@style/RadioButtonStyles2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/money_n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textlines_all"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/RelativeLayout6"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/layout_height_50"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/price_n"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/layout_height_15"
                        android:text="其他金额"
                        android:textColor="@color/common_text" />
                </LinearLayout>

                <RadioButton
                    android:clickable="false"
                    android:id="@+id/radio_n"
                    style="@style/RadioButtonStyles2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <EditText
                android:id="@+id/ed_otherprice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_50"
                android:background="@drawable/textlines_all"
                android:ems="10"
                android:hint="请输入充值金额"
                android:inputType="number"
                android:paddingLeft="@dimen/layout_height_5"
                android:textSize="@dimen/m_font"
                android:visibility="gone" >

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/bt_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_50"
                android:layout_marginTop="@dimen/layout_height_20"
                android:background="@drawable/bt_red_selector"
                android:text="下一步"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>