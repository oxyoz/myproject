<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".practice.PracTagDetailActivity" >

    <include
        android:id="@+id/common_bar"
        layout="@layout/layout_title_bar" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/common_bar"
        android:background="@color/all_bg_color"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="8dp" >

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical" >

                <TableRow
                    android:id="@+id/tableRow1"
                    style="@style/ball_tag_style"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_50"
                    android:background="@drawable/table_frame_gray" >

                    <RelativeLayout
                        android:id="@+id/RelativeLayout1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/layout_height_50"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="8dp" >

                        <TextView
                            android:id="@+id/tv_teenum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/textView1"
                            android:text=""
                            android:textColor="@color/common_text" />

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="打位个数"
                            android:textColor="@color/txt_gray" />
                    </RelativeLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:background="#999999" />

                    <RelativeLayout
                        android:id="@+id/RelativeLayout1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/layout_height_50"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="8dp" >

                        <TextView
                            android:id="@+id/tv_teeflo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/TextView02"
                            android:textColor="@color/common_text" />

                        <TextView
                            android:id="@+id/TextView02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="打位层数"
                            android:textColor="@color/txt_gray" />
                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:id="@+id/TableRow04"
                    style="@style/ball_tag_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_height_8" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/table_frame_gray"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="8dp" >

                        <TextView
                            android:layout_marginTop="3dp"
                            android:id="@+id/TextView18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ball_lab_related"
                            android:textColor="@color/txt_gray" />

                        <TextView
                            android:id="@+id/tv_supporting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:padding="3dp"
                            android:text=""
                            android:textColor="@color/common_text" />
                    </LinearLayout>
                </TableRow>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/table_frame_gray"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/layout_height_30"
                    android:gravity="center_vertical"
                    android:text="@string/ball_lab_summy_tip"
                    android:textColor="@color/txt_gray" />

                <TextView
                    android:id="@+id/tv_summy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_text" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>