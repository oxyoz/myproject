<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <!--
         <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0" />
    -->

    <view
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0"
        class="me.wangolf.utils.viewUtils.CustomViewPager" />
    <!-- </FrameLayout> -->

    <RadioGroup
        android:id="@+id/main_radio"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="2dp" >

        <RadioButton
            android:id="@+id/rb_index"
            style="@style/main_tab_bottom"
            android:background="@drawable/icon_function"
            android:drawableTop="@drawable/main_shouye"
            android:text="@string/tab_index" />

        <RadioButton
            android:id="@+id/rb_college"
            style="@style/main_tab_bottom"
            android:background="@drawable/icon_function"
            android:drawableTop="@drawable/main_college"
            android:text="@string/tab_ball" />

        <RadioButton
            android:id="@+id/rb_store"
            style="@style/main_tab_bottom"
            android:background="@drawable/icon_function"
            android:drawableTop="@drawable/main_shop"
            android:text="@string/tab_shop" />

        <RadioButton
            android:id="@+id/rb_setting"
            style="@style/main_tab_bottom"
            android:background="@drawable/icon_function"
            android:drawableTop="@drawable/main_community"
            android:text="@string/tab_setting" />

        <RadioButton
            android:id="@+id/rb_user"
            style="@style/main_tab_bottom"
            android:background="@drawable/icon_function"
            android:drawableTop="@drawable/user_info_index"
            android:text="@string/tab_user" />
    </RadioGroup>

</LinearLayout>