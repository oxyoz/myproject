<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black" >

    <include
        android:id="@+id/common_bar"
        layout="@layout/layout_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/common_bar"
        android:background="@color/all_bg_color"
        android:fillViewport="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="15dp" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:background="@drawable/textlines_all"
                android:orientation="vertical"
                android:padding="1dp" >

                <RelativeLayout
                    android:id="@+id/my_account"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_50"
                    android:layout_marginTop="-2dp"
                    android:background="@drawable/gray_light_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:padding="@dimen/layout_height_8" >

                    <TextView
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/my_phone"
                        android:gravity="center_vertical"
                        android:drawablePadding="7dp"
                        android:id="@+id/TextView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机号"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/common_text" />

                    <TextView
                        android:layout_centerVertical="true"
                        android:text=""
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"

                         />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:background="@drawable/textlines_all"
                android:orientation="vertical"
                android:padding="1dp" >

                <RelativeLayout
                    android:id="@+id/my_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_50"
                    android:layout_marginTop="-2dp"
                    android:background="@drawable/gray_light_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:padding="@dimen/layout_height_8" >

                    <TextView
                        android:drawableLeft="@drawable/my_passwd"
                        android:drawablePadding="7dp"
                        android:id="@+id/TextView05"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="独立密码"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/common_text" />

                    <ImageView
                        android:id="@+id/ImageView06"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/xiaojiangtou"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/textlines_all"
                android:orientation="vertical"
                android:padding="1dp" >

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/checkup"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height_50"
                    android:background="@drawable/gray_light_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:padding="@dimen/layout_height_8" >

                    <TextView
                        android:id="@+id/TextView06"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微信账号"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/my_wx"
                        android:drawablePadding="7dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/common_text" />

                    <TextView
                        android:id="@+id/tv_wx"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"

                        />
                </RelativeLayout>
            </LinearLayout>





            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" >

                <TextView
                    android:id="@+id/load_apk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text=""
                    android:textColor="@color/common_text"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>