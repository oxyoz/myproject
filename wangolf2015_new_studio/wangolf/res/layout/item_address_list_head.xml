<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

   <TextView
       android:layout_marginLeft="@dimen/layout_height_10"
       android:id="@+id/tv_no_address"
       android:layout_below="@+id/title_bar"
       android:layout_width="match_parent"
       android:text="不显示所在位置"
       android:textColor="@color/common_text_h1"
       android:padding="@dimen/layout_height_10"
       android:background="@color/white"
       android:layout_height="wrap_content" />
    <View
        android:layout_below="@+id/tv_no_address"
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/linecolor"
        ></View>


</RelativeLayout>
