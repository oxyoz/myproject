<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/item_comm_hot_li"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/comm_hot_ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/comm_r2_c2" />

        <TextView
            android:id="@+id/comm_hot_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/comm_hot_ico"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/hot_posts_title" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/xiaojiangtou" />
    </RelativeLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/item_comm_hot_li"
        android:background="#cccccc" />

</RelativeLayout>