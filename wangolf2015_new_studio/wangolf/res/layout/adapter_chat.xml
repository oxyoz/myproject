<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_50"
        android:gravity="center_vertical"
        android:background="@drawable/mm_listitem" >

        <RelativeLayout
            android:id="@+id/head_layout"
            android:layout_width="15dp"
            android:layout_height="60dp" >

            <!--
                 <ImageView android:id="@+id/head" android:layout_width="55dp"
				android:layout_height="55dp" android:layout_alignParentLeft="true"
				android:layout_centerVertical="true" android:paddingLeft="5dp"
				android:background="@drawable/icon" />
            -->

        </RelativeLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/head_layout"
            android:textColor="#000"
            android:textSize="@dimen/b18_font" />
         <View
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_height="0.1dp"
        android:visibility="gone"
        android:background="#999999" />
        <!--
             <TextView android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_alignParentRight="true"
			android:layout_centerVertical="true" 
			android:paddingTop="15dip"
			android:paddingBottom="15dip"
			android:paddingLeft="15dip"
			android:paddingRight="55dip"
			android:text="我的资料" android:textColor="#666" android:id="@+id/date" />
        -->

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/head_layout"
            android:padding="7dp"
            android:textColor="#666" />
    </RelativeLayout>

</LinearLayout>