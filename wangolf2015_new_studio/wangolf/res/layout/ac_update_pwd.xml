<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".UpdatePwdActivity" >

    <include layout="@layout/layout_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/all_bg_color"
        android:paddingTop="8dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_50"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/textlines_yuan_all" >

            <EditText
                android:id="@+id/ed_old_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_50"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:background="@null"
                android:ems="10"
                android:hint="请输入旧密码"
                android:inputType="textPassword"
                android:padding="5dp"
                android:textSize="@dimen/m_font" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_50"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/textlines_yuan_all" >

            <EditText
                android:id="@+id/ed_new_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_50"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:background="@null"
                android:ems="10"
                android:hint="新密码(6至12位)"
                android:inputType="textPassword"
                android:padding="5dp"
                android:textSize="@dimen/m_font" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_50"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/textlines_yuan_all" >

            <EditText
                android:id="@+id/ed_repeat_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_50"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:background="@null"
                android:ems="10"
                android:hint="重复新密码"
                android:inputType="textPassword"
                android:padding="5dp"
                android:textSize="@dimen/m_font" />
        </RelativeLayout>
        <Button
            android:id="@+id/up_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_50"
            android:layout_margin="8dp"
            android:background="@drawable/bt_green_yuan_all_selector"
            android:text="@string/bt_reg_check"
            android:textColor="@color/white"
            android:textSize="@dimen/m_font" />
    </LinearLayout>

</LinearLayout>