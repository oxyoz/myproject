<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/layout_height_10"
    android:background="@color/black"
    android:orientation="vertical" >

    <include layout="@layout/layout_title_bar" >
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/all_bg_color"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/adv_pager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/img_main_top"
            android:layout_marginLeft="-2dp"
            android:layout_marginRight="-3dp"
            android:background="#FFFFFF" >

            <LinearLayout
                android:id="@+id/shop_viewpager"
                android:layout_width="fill_parent"
                android:layout_height="260dp"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/dots_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:orientation="horizontal" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/layout_height_5"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="@dimen/layout_height_5"
                android:layout_weight="1"
                android:background="@drawable/bt_index_practice_gray_selector" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h55"
                    android:layout_centerInParent="true"
                    android:clickable="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/main_practice" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="练习场"
                            android:textColor="@color/white"
                            android:textSize="@dimen/b16_font" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="实时支付"
                            android:textColor="@color/white"
                            android:textSize="@dimen/ss_font" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/layout_height_7"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/h55"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_index_knowledge_gray_selector"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="高球常识"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_order" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/h55"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_index_bag_gray_selector"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="初学礼包"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_order" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/h55"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_index_classroom_gray_selector"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="高球教学"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_order" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/all_bg_color"
            android:padding="8dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="限时特惠"
                android:textColor="@color/txt_green_1"
                android:textSize="@dimen/b16_font" />

            <View
                android:id="@+id/line"
                android:layout_width="0.1dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/textView1"
                android:background="@color/linecolor"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/line"
                android:text="一大波优惠等你来抢"
                android:textColor="@color/common_text_h1"
                android:textSize="@dimen/s_font"
                android:visibility="gone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:background="@drawable/more_event" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/main_linecolor"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:paddingLeft="7dp"
            android:paddingRight="7dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/knowledge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/index_01_selector" />

                <TextView
                    android:id="@+id/practice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/index_practice_selector" />

                <TextView
                    android:id="@+id/ball_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/index_ball_selector" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/ballsearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/index_02_selector" />

                <TextView
                    android:id="@+id/event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/index_event_selector" />

                <TextView
                    android:id="@+id/main_shop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/index_shop_selector" />

                <TextView
                    android:id="@+id/tv_Saleexchange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/index_03_selector" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>