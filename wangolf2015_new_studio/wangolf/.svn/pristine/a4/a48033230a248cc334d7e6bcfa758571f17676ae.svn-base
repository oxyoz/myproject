<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black" >

    <include
        android:id="@+id/common_bar"
        layout="@layout/layout_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/common_bar"
        android:background="@color/all_bg_color"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/lay_city"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/textlines_left_top_right"
                android:clickable="true"
                android:gravity="center_vertical" >

                <LinearLayout
                    style="@style/layout_bg_gray_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gray_light_selector"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/TextView01"
                        style="@style/txt_gray_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="@string/ballcity" />

                    <TextView
                        android:id="@+id/tv_curlocation"
                        style="@style/AppBaseTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/current_address"
                        android:textColor="@color/common_text" />

                    <TextView
                        android:id="@+id/tv_city_tip"
                        style="@style/AppBaseTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(当前位置)"
                        android:textColor="@color/txt_gray" />

                    <ImageView
                        android:id="@+id/bt_city1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@drawable/xiaojiangtou" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_date"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="-2dp"
                android:background="@drawable/textlines_left_top_right"
                android:clickable="true"
                android:gravity="center_vertical" >

                <LinearLayout
                    style="@style/layout_bg_gray_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gray_light_selector"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/TextView02"
                        style="@style/txt_gray_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="@string/balldate" />

                    <TextView
                        android:id="@+id/tv_date"
                        style="@style/AppBaseTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="5月5日"
                        android:textColor="@color/common_text" />

                    <TextView
                        android:id="@+id/tv_date_tip"
                        style="@style/AppBaseTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(明天)"
                        android:textColor="@color/txt_gray" />

                    <ImageView
                        android:id="@+id/bt_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@drawable/xiaojiangtou" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="-2dp"
                android:background="@drawable/textlines_left_top_right"
                android:clickable="true"
                android:gravity="center_vertical" >

                <LinearLayout
                    style="@style/layout_bg_gray_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gray_light_selector"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/TextView0"
                        style="@style/txt_gray_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="@string/balltime" />

                    <TextView
                        android:id="@+id/tv_time"
                        style="@style/AppBaseTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="9:30分"
                        android:textColor="@color/common_text" />

                    <ImageView
                        android:id="@+id/bt_city2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@drawable/xiaojiangtou" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_ballname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="-2dp"
                android:background="@drawable/textlines_left_top_right"
                android:clickable="true"
                android:gravity="center_vertical" >

                <LinearLayout
                    style="@style/layout_bg_gray_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gray_light_selector"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/TextView03"
                        style="@style/txt_gray_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="@string/ballname" />

                    <TextView
                        android:id="@+id/tv_ballname"
                        style="@style/AppBaseTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:hint="@string/tv_ballname"
                        android:textColor="@color/common_text" />

                    <ImageView
                        android:id="@+id/bt_city4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@drawable/xiaojiangtou" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/bt_search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bt_green_yuan_all_selector"
                android:text="@string/btsearch"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_special_time"
            style="@style/layout_bg_gray_style"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bt_yellow_selector"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_special_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="-3dp"
                android:gravity="center"
                android:text="@string/special_time"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>