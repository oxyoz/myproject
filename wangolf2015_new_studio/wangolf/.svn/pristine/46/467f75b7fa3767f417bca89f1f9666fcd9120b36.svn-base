<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/linecolor"></View>
    <RelativeLayout
        android:id="@+id/lsit_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
       android:layout_gravity="center_vertical"
        android:padding="5dp">
        <TextView
            android:id="@+id/tag_ico"
         android:gravity="center_vertical"
           android:drawableLeft="@drawable/tag_icon"
            android:layout_width="wrap_content"
            android:text="选择标签"
            android:drawablePadding="12dp"
            android:textSize="16dp"
            android:textColor="#585b62"
            android:layout_height="wrap_content"
           />
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tag_ico"
            android:layout_marginLeft="@dimen/layout_height_10"
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="@color/common_orange"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/xiaojiangtou" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/linecolor"></View>
    <RelativeLayout
        android:id="@+id/c_d_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="5dp" >

        <TextView
           android:drawableLeft="@drawable/comm_d_icon"
            android:text="选择图片"
            android:drawablePadding="12dp"
            android:textSize="16dp"
            android:textColor="#585b62"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
             />

        <TextView

            android:id="@+id/c_d_ed_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:background="@drawable/li_gray_selector"
            android:gravity="center_vertical"
            android:hint="所在位置"
            android:padding="4dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/xiaojiangtou" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/linecolor"></View>
</LinearLayout>